<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tab5.ChangeProfileActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/icon_back"
        app:titleTextAppearance="@style/title"
        app:titleTextColor="#FF9900"
        app:title="정보변경"
        app:titleCentered="true"/>

    <TextView
        android:id="@+id/btn_change_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hanbit"
        android:text="보내기"
        android:textColor="#FF9900"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_below="@id/toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFC107"
        android:src="@drawable/cinnamaroll07"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/btn_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hanbit"
        android:text="이미지 변경"
        android:layout_toRightOf="@id/iv_profile"
        android:layout_alignBottom="@id/iv_profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/input_nickname"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@id/input_nickname"
        android:fontFamily="@font/hanbit"
        android:text="닉네임:  "
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_nickname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="닉네임"
        android:layout_below="@id/btn_change_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:fontFamily="@font/hanbit"
        android:text="중복"
        android:padding="12dp"
        android:layout_alignTop="@id/input_nickname"
        android:layout_toRightOf="@id/input_nickname"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@id/input_password"
        android:layout_toStartOf="@id/input_password"
        android:fontFamily="@font/hanbit"
        android:text="비밀번호:  "
        android:textSize="16sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="비밀번호"
        android:layout_below="@id/input_nickname"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@id/input_password_confirm"
        android:layout_toStartOf="@id/input_password_confirm"
        android:fontFamily="@font/hanbit"
        android:text="비밀번호:  "
        android:textSize="16sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_password_confirm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="비밀번호 확인"
        android:layout_below="@id/input_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:fontFamily="@font/hanbit"
        android:text="연결된 계정 : 카카오톡"
        android:textSize="16sp"
        android:layout_below="@id/input_password_confirm"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="16dp"/>


</RelativeLayout>