<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/weather"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/weather_sun"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logotitle"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D9D9D9"
        android:layout_marginTop="8dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scrollbars="none">

        <include layout="@layout/choice_list" android:id="@+id/choice_list_btns"/>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_search_hood"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="동네입력"
            android:layout_weight="1"
            android:padding="4dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:fontFamily="@font/hanbit"
            android:text="검색"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_companion_pets"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_selected"
                android:src="@drawable/companion_pet1"
                android:layout_margin="2dp"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/btn_companion_kids"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:src="@drawable/companion_baby7"
                android:layout_margin="2dp"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/btn_companion_solo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:src="@drawable/companion_solo"
                android:layout_margin="2dp"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/btn_companion_couple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:src="@drawable/companion_couple"
                android:layout_margin="2dp"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/btn_companion_group"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:src="@drawable/companion_peoples"
                android:layout_margin="2dp"
                android:padding="4dp"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/hanbit"
        android:text="'애견동반' 가능한 음식점"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/move_map"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/logo_background"
            android:src="@drawable/map"
            app:tint="@null"/>
    </RelativeLayout>





</LinearLayout>